<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.gibson.a.fakebutton.view.CreateNewUserActivity">

    <EditText
        android:id="@+id/name_et"
        android:hint="@string/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/et_margins"
        />

    <EditText
        android:id="@+id/email_et"
        android:hint="@string/email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/et_margins"
        />

    <EditText
        android:id="@+id/canditate_et"
        android:hint="@string/candidate_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/et_margins"
        />

    <Button
        android:id="@+id/add_client_bttn"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_client_button"
        android:layout_width="@dimen/add_client_buttn_w"
        android:layout_height="@dimen/add_client_bttn_l" />



</LinearLayout>
